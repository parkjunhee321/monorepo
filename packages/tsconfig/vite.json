{
  "extends": "./base.json",

  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "paths": {
      "@admin/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
